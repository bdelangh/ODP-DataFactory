{
	"name": "AzureDataLakeStorageGen2Sink",
	"properties": {
		"description": "ADLS Gen2 sink",
		"linkedServiceName": {
			"referenceName": "AzDataLakeGen2",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"Data_Destination_Container": {
				"type": "String"
			},
			"Data_Destination_Directory": {
				"type": "String"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"folderPath": {
					"value": "@{dataset().Data_Destination_Directory}",
					"type": "Expression"
				},
				"fileSystem": {
					"value": "@{dataset().Data_Destination_Container}",
					"type": "Expression"
				}
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"quoteChar": "\""
		},
		"schema": []
	}
}